generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostType {
  BERITA
  PENGUMUMAN
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

enum Jabatan {
  LURAH
  SEKRETARIS_KELURAHAN
  KEPALA_SEKSI_PEMERINTAHAN
  KEPALA_SEKSI_PEMBANGUNAN
  KEPALA_SEKSI_KESEJAHTERAAN_RAKYAT
  KEPALA_LINGKUNGAN_1
  PEMBANTU_KALING_1
}

model Post {
  id            Int        @id @default(autoincrement())
  type          PostType
  status        PostStatus @default(DRAFT)
  title         String
  featuredImage String?
  body          String?    @db.Text 
  date          DateTime? 
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model GalleryItem {
  id        Int      @id @default(autoincrement())
  url       String   // URL gambar
  caption   String?
  createdAt DateTime @default(now())
}

model Potential {
  id        Int      @id @default(autoincrement())
  name      String
  desc      String?
  emoji     String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

model ProfileInfo {
  key       String   @id // Contoh: "visi", "misi", "sejarahRingkas", "sejarahLengkap", "profilUmum"
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

model StructureMember {
  id         String    @id @default(uuid())
  jabatan    Jabatan
  nama       String?
  nip        String?   // Tambahkan NIP (opsional)
  lingkungan Int?     // Nomor lingkungan (untuk Kaling & Pembantu Kaling)

  // Untuk Hierarki
  parentId   String?   // ID dari atasan langsung (null untuk Lurah)
  parent     StructureMember? @relation("Hierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children   StructureMember[] @relation("Hierarchy") // Bawahan langsung

  urutan     Int?      // Untuk sorting (misal urutan Kasi, Kaling, Pembantu)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([parentId]) // Index untuk mempercepat query hierarki
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}